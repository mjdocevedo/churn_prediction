  image: churn-prediction-env

entry_points:
  main:
    command: "python src/train.py"
  
  evaluate:
    # Evaluate script uses MLFLOW_MODEL_URI_OVERRIDE env var if set, or defaults
    command: "python src/evaluate.py"
    
  register:
    # Register script uses MLFLOW_RUN_ID env var
    command: "python src/register.py"

  serve:
    # Serve script uses MLFLOW_MODEL_URI_OVERRIDE env var (defaults to Staging)
    command: "python src/serve.py"
